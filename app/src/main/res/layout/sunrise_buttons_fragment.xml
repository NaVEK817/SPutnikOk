<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_200"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/buttontimeZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/teal_200"
        android:text="Время для заката" />

    <Button
        android:id="@+id/buttontimeV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/buttontimeZ"
        android:layout_toRightOf="@+id/buttontimeZ"
        android:background="@color/teal_200"
        android:text="Время для восхода" />

    <Button
        android:id="@+id/swapplace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttontimeZ"
        android:background="@color/teal_200"
        android:text="Поменять картинку" />
</RelativeLayout>